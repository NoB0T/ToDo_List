{
  "name": "todolist",
  "version": "1.0.0",
  "description": "Basic MERN web app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "npx nodemon server.js",
    "server": "node server.js",
    "client": "cd ../frontend && npm run dev",
    "client-build": "cd ../frontend && npm run build",
